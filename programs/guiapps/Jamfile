TOP ?= ../.. ;
SubDir TOP programs guiapps ;
LOCATE_TARGET = $(SUBDIR)/obj ;

SetBinDir $(BINS)gui ;

UseAppDir winman ;

Main winman : winman.c JMan.a65 ;
DynLink winman : winlib wgsutil fontlib ;
LinkOpts winman : -Wl-t0x400 ;
CopyApp winman : $(EXTRAS)backgrounds/backimg.hbm ;

Main winapp search launch guitext wordserve credits ;
DynLink search guitext credits winapp launch wordserve : winlib ;
LinkOpts winapp : -Wl-t0x400 ;

SetBinDir $(BINS)programs/utils ;

Main mine : mine.c amine.a65 ;
DynLink mine : winlib wgsutil ;
CopyBin $(EXTRAS)testfiles/j.jpg ;

SetBinDir $(BINS)programs/graphics ;

DynLink jpeg : winlib ;
LinkOpts jpeg : -Wl-t0x209 ;
Main jpeg : jpeg.c ajpeg.a65 ;

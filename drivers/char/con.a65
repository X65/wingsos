putOnScr	.(

	and #$ff
	ldx EscState
	beq noesc
	brl isesc
noesc	cmp #" "
	bcc notPrint
dopu	brl putIt
notPrint	cmp #ESC
	bne notEsc
	lda #1
	sta EscState
	rts
notEsc	cmp #BEL
	bne nobel
	rts
nobel	cmp #LF
	bne notLF
lineFeed	inc YPos
	lda YPos
	cmp Bottom
	bcs isSc
	cmp #YSize
	bcc noSc
isSc	jsr scroll
	dec YPos
noSc	brl XYScr

notLF	cmp #CR
	bne notCR
	stz XPos
	brl XYScr

notCR	cmp #BS
	bne notBS
	lda XPos
	beq prvLine
delag	dec XPos
	dec COffs
	lda XPos
	cmp #XSize-1
	beq delag
prvLine	rts

notBS	cmp #TAB
	bne notab
	lda XPos
	and #7
	pha
	lda #8
	sec
	sbc 1,s
moretab	sta 1,s
	lda #" "
	jsr putIt
	lda 1,s
	dec
	bne moretab
	pla
	rts
notab		
putIt	ldy XPos
	cpy #XSize
	bcc fine
	pha
	stz XPos
	jsr lineFeed
	pla
fine	ldy COffs
	!AS
	sta [CursorP],y
	lda Colour
	sta [ColP],y
	!AL
	iny
	sty COffs
	inc XPos
out	rts
	.)

XYScr	.(
	lda XPos
	bpl okX
	lda #0
okX	cmp #XSize
	bcc okX2
	lda #XSize-1
okX2	sta XPos
	lda YPos
	bpl okY
	lda #0
okY	cmp #YSize
	bcc okY2
	lda #YSize-1
okY2	sta YPos
	jsr getoffs
	clc
	adc XPos
	sta COffs
	rts
	.)


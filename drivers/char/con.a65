	beq doFont
	cmp #IOCTL_ChBG
	beq doChBG
	cmp #IOCTL_ChFG
	beq doChFG
	cmp #IOCTL_ChBord
	beq doChB
	cmp #IOCTL_ChCurs
	!jeq doChC
	ldx #-1
	rts
goodc	ldx #0
	rts
	

keyInt	.(
	
	phd
	pea ^ShifDown
	pea !ShifDown
	jsr @_scanKey
	pla
	pla
	cpx #0
	beq noKey2
	cpx LastKey
	bne difkey
	dec RepTime		; check repeat time
	beq okKey
	brl noKey
okKey	lda #AftRep
	sta RepTime
	bra nold
noKey2	stz LastKey
	brl noKey
difkey	stx LastKey
	lda #BefRep
	sta RepTime
		
nold	lda ShifDown	; cbm+shift down
	cmp #2
	bne novirt
	cpx #ESC
	bne noesc
	lda ThChan
	ldx #PMSG_LoseScr
	ldy #0
	jsr @S_sendPulse

	.text
	!PRO LZ
	pea 0
	pea 0
	jsr @_FL_extYab
	stx YOffs
	sta PSize
	pla
	pla

	ldy #JMnu_Data
	lda [Self],y
	sta Upto
	iny
	iny
	lda [Self],y
	sta Upto+2
	
	ldy #JW_YSize
	lda [Self],y
	lsr
	lsr
	lsr
	sta Y8
	pha
	ldy #JW_XSize
	lda [Self],y
	lsr
	lsr
	lsr
	sta X8
	pha
	pea ^MnuStr
	pea !MnuStr
	jsr @_GfxString
	pla
	pla
	pla
	pla
		
	lda X8
	dec
	dec
	pha
	pea ^MnuStr3
	pea !MnuStr3
	jsr @_GfxString
	pla
	pla
	pla

	lda Y8
	dec
	dec
	beq noy8
	tax
	lda X8
	dec
	dec
	pha
	pha
	phx
	pea ^MnuStr5
	pea !MnuStr5
	jsr @_GfxString
	tsc
	clc
	adc #10
	tcs
	bra donebot
	
noy8	lda X8
	dec
	dec
	pha
	pea ^MnuStr6
	pea !MnuStr6
	jsr @_GfxString
	pla
	pla
	pla

donebot	pea CHAR_End
	jsr @_GfxChar
	pla


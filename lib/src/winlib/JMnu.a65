nosel	lda YUpto
	clc
	adc PSize
	sta YUpto
	eor #7
	inc
	and #7
	adc YUpto
	sta YUpto
	lda #8
	sec
	sbc PSize
	lsr
	clc
	adc YUpto
	sta YUpto

gonext	lda #MENU_SIZE
	clc
	adc Upto
	sta Upto
	lda Upto+2
	adc #0
	sta Upto+2
	brl nextupto
	
finished	
exeet	!POST LZ
	rtl

getlenx	pea 0
	pea 0
	pei (NameP+2)
	pei (NameP)
	jsr @_FL_extStrX
	tsc
	clc
	adc #8
	tcs
	rts

MnuStr	.byte GFX_Charset
	.word !Chars
	.byte ^Chars,0
	.byte "%b%b"
	.byte "%E"
	
MnuStr5	.byte CHAR_YRep,"%b",4,CHAR_Rep,"%b",0,5

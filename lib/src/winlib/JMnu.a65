&_JMnuButton .(
	
	.abs 1
ItemP	.long 4
MenP	.long 4
XGood	.word 2
YGood	.word 2
LZ	= *-1
	.dsb 5
Self	.long 4
SubType	.word 2
X	.word 2
Y	.word 2
XAbs	.word 2
YAbs	.word 2

	.text
	!PRO LZ
	lda X
	bmi dokill
	ldy #JW_XSize
	cmp [Self],y
	bcs dokill
	lda Y
	bmi dokill
	iny
	iny
	cmp [Self],y
	bcc nokl
dokill	!jra killmen
nokl	pea 0
	tdc
	clc
	adc #XGood
	pha
	pei (Y)
	pei (X)
	pei (Self+2)
	pei (Self)
	jsr @_JMnuWhich
	!POP 12
	stx ItemP
	sty ItemP+2
	tya
	ora ItemP
	beq noitem
	lda SubType
	cmp #EVS_But1Down
	bne notdown
	pei (YGood)
	pei (XGood)
	pei (ItemP+2)
	pei (ItemP)
	pei (Self+2)
	pei (Self)
	jsr @_JMnuOpSub
	tsc
	clc
	adc #12
	tcs
	bra noitem
notdown	ldy #MENU_Submenu+2
	lda [ItemP],y
	dey
	dey
	ora [ItemP],y
	bne noitem
	
	pei (ItemP+2)
	pei (ItemP)
	pei (Self+2)
	pei (Self)
	ldy #JMnu_Callback
	lda [Self],y
	tax
	iny
	iny
	lda [Self],y
	jsr @cb
	!POP 8
		
killmen	pei (Self+2)
	pei (Self)
	jsr @_JMnuTopM
	!POP 4
	phy
	phx
	jsr @_JMnuPopKill
	!POP 4
noitem	!POST LZ
	rtl
	
	.)


_JMnuOpSub	
	.(
	.abs 1
SubMenu	.long 4
LZ	= *-1
	.dsb 5
Self	.long 4
ItemP	.long 4
X	.word 2
Y	.word 2
	.text

	!PRO LZ
	lda ItemP
	ldy #JMnu_Selected
	cmp [Self],y
	bne difsub
	lda ItemP+2
	iny
	iny
	cmp [Self],y
	bne difsub

	ldy #JMnu_SubMenu
	lda [Self],y
	sta SubMenu
	iny
	iny
	lda [Self],y
	sta SubMenu+2
	ora SubMenu
	beq focthis
	ldy #JMnu_SubMenu
	lda [SubMenu],y
	iny
	iny
	ora [SubMenu],y
	beq nosub
	lda [SubMenu],y
	pha
	dey
	dey
	lda [SubMenu],y
	pha
	jsr @_JMnuKill
	pla
	pla
nosub	brl foclast

difsub	ldy #JMnu_SubMenu+2
	lda [Self],y
	dey
	dey
	ora [Self],y
	beq nosubm
	iny
	iny
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
	jsr @_JMnuKill
	pla
	pla
nosubm	ldy #JMnu_Selected
	lda ItemP
	sta [Self],y
	iny
	iny
	lda ItemP+2
	sta [Self],y
	pei (Self+2)
	pei (Self)
	jsr @_JWReDraw
	pla
	pla
	lda #0
	ldy #JMnu_SubMenu
	sta [Self],y
	iny
	iny
	sta [Self],y
	
	ldy #MENU_Submenu
	lda [ItemP],y
	iny
	iny
	ora [ItemP],y
	bne issub
focthis	lda Self+2
	sta SubMenu+2
	lda Self
	sta SubMenu
	bra foclast
issub	ldy #JMnu_Callback+2
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
	pei (Y)
	pei (X)
	ldy #MENU_Submenu+2
	lda [ItemP],y
	pha
	dey
	dey
	lda [ItemP],y
	pha
	pea 0
	pea 0
	jsr @_JMnuInit
	!POP 16
	stx SubMenu
	sty SubMenu+2
	lda Self
	ldy #JTop_PrevTop
	sta [SubMenu],y
	iny
	iny
	lda Self+2
	sta [SubMenu],y
	ldy #JMnu_SubMenu
	lda SubMenu
	sta [Self],y
	iny
	iny
	lda SubMenu+2
	sta [Self],y
	ldy #JMnu_Pare
	lda Self
	sta [SubMenu],y
	iny
	iny
	lda Self+2
	sta [SubMenu],y
	pei (SubMenu+2)
	pei (SubMenu)
	jsr @_JWShow
	pla
	pla
	bra exeet
foclast	
exeet	!POST LZ
	rtl
	
	.)


	pla
	pla

	ldy #MENU_Submenu
	lda [Upto],y
	iny
	iny
	ora [Upto],y
	beq nosuby
	pei (YUpto)
	ldy #JW_XSize
	lda [Self],y
	sec
	sbc #8
	pha
	jsr @_GfxSetPen
	pla
	pla
	pea ^MnuStr8
	pea !MnuStr8
	jsr @_GfxString
	pla
	pla

nosuby	lda Sel
	beq nosel
	jsr getlenx
	txa
	sta Sel
	eor #7
	inc
	and #7
	clc
	adc Sel
	sta Sel
	ldy #JW_XSize
	lda [Self],y
	sec
	sbc Sel
	bcc nosel
	beq nosel
	lsr
	lsr
	lsr
	pha
	pea 1
	pha

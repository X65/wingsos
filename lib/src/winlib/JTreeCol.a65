&_JTreeColButton
	.(

	.abs 1
Iter	.dsb TreeIter_SIZE
TreP	.long 4
LZ	= *-1
	.dsb 5
Self	.long 4
Type	.word 2
X	.word 2
Y	.word 2

	.text
	!PRO LZ
	lda Type
	and #EVS_But1Down
	!jne exeet
	ldy #JCol_List
	lda [Self],y
	sta TreP
	iny
	iny
	lda [Self],y
	sta TreP+2
	
	pea 0
	tdc
	inc
	pha
	pei (TreP+2)
	pei (TreP)
	jsr @_JTreeGetIter
	!POP 8
	
	lda Y
	clc
	ldy #JList_YScroll
	adc [TreP],y
	sta Y
	
nxone	pea 0
	tdc
	inc
	pha
	pei (TreP+2)
	pei (TreP)
	jsr @_JTreeNextItem
	!POP 8	
	txa
	!jne exeet
	
	lda Y
	sec
	sbc #8
	sta Y
	!jpl nxone
	
	ldy #JCol_Type
	lda [Self],y
	and #JColF_Indent
	beq noexp
	lda Iter+TreeIter_Flags
	and #JITEMF_Expandable
	beq noexp
	lda Iter+TreeIter_Indent
	asl
	asl
	asl
	sec
	sbc X
	cmp #-8
	bcc noexp
	
	pei (Iter+TreeIter_ItemP+2)
	pei (Iter+TreeIter_ItemP)
	pei (TreP+2)
	pei (TreP)
	jsr @_JTreeTogExpand
	!POP 8
	bra exeet
	
noexp	pei (Iter+TreeIter_ItemP+2)
	pei (Iter+TreeIter_ItemP)
	pei (TreP+2)
	pei (TreP)
	jsr @_JTreeItemClicked
	!POP 8
	
exeet	!POST LZ
	rtl
	
	.)
		
IcoStr	.byte GFX_Bitmap,"%D"
	.byte 2,1
	.byte BITT_Seper,"%D"
	.byte "%E"
	
ChString
	.byte GFX_Charset
	.byte "%D"
	.byte 1,1
	.byte "%b"
	.byte CHAR_End
	.byte "%E"
	
ChSet	.dsb 8
	.byte 0,0,$7c,$6c,$47,$6c,$7c,0
	.byte 0,0,$7c,$7c,$47,$7c,$7c,0



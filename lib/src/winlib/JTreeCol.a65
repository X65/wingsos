/*-----------------------------------------------
     Tree Column View widget
------------------------------------------------*/

&_JTreeColInit	
	.(

	.abs 1
LZ	= *-1
	.dsb 5
Self	.long 4
Tree	.long 4
Title	.long 4
Width	.word 2
Offset	.long 4
Type	.word 2

	.text
	
	!PRO LZ
	!PRPOBJ JTreeCol
	pea JF_Selectable
	pea WEV_Button+WEV_Boundary
	pea 80
	pea 80
	pei (Self+2)
	pei (Self)
	jsr @_JWInit
	!POP 12
	pei (Title+2)
	pei (Title)
	!POUT "Title of col '%s'\n"
	!POP 4
	lda #32767
	ldy #JW_MaxYS
	sta [Self],y
	ldy #JCol_Offset
	lda Offset
	sta [Self],y
	iny
	iny
	lda Offset+2
	sta [Self],y
	ldy #JCol_List
	lda Tree
	sta [Self],y
	iny
	iny
	lda Tree+2
	sta [Self],y
		
	ldy #JCol_Type
	lda Type
	sta [Self],y
	ldy #JW_Colours
	lda [Tree],y
	sta [Self],y
exeet	ldx Self
	ldy Self+2
	!POST LZ
	rtl
	.)


&_JScrSync
	.(

	.abs 1
VBar	.long 4
HBar	.long 4
View	.long 4
prev	.word 2
NFlags	.word 2
LZ	= *-1
	.dsb 5
Self	.long 4

	.text

	!PRO LZ
	ldy #JScr_HBar+2
	lda [Self],y
	sta HBar+2
	dey
	dey
	lda [Self],y
	sta HBar
	ldy #JScr_VBar+2
	lda [Self],y
	sta VBar+2
	dey
	dey
	lda [Self],y
	sta VBar
	ldy #JScr_View
	lda [Self],y
	sta View
	iny
	iny
	lda [Self],y
	sta View+2
	ldy #JScr_SFlags
	lda [Self],y
	sta prev
	
	stz NFlags
	ldy #JView_VisX
	lda [View],y
	pha
	ldy #JView_MaxX+2
	lda [View],y
	pha
	dey
	dey
	lda [View],y
	pha
	pei (HBar+2)
	pei (HBar)
;	!POUT "%lx MaxX %ld %d\n"
	jsr @_JBarSetParams
	!POP 10
	lda prev
	and #JScrF_HAlways
	bne hvis
	txa
	beq nvx
	lda prev
	and #JScrF_HNever
	bne nvx
hvis	lda #JScrF_HVis
	tsb NFlags

nvx	ldy #JView_VisY
	lda [View],y
	pha
	ldy #JView_MaxY+2
	lda [View],y
	pha
	dey
	dey
	lda [View],y
	pha
	pei (VBar+2)
	pei (VBar)
;	!POUT "%lx MaxY %ld %d\n"
	jsr @_JBarSetParams
	!POP 10
	lda prev
	and #JScrF_VAlways
	bne vvis
	txa
	beq nvy
	lda prev
	and #JScrF_VNever
	bne nvy
vvis	lda #JScrF_VVis
	tsb NFlags
nvy	ldx #0
	lda prev
	and #JScrF_HVis|JScrF_VVis
	cmp NFlags
	!jeq exeet
	lda NFlags
	eor prev
	sta prev
	and #JScrF_HVis
	beq sameh
	pei (HBar+2)
	pei (HBar)
	lda NFlags
	and #JScrF_HVis
	beq noh
	jsr @_JWShow
	bra donh
noh	jsr @_JWHide
donh	!POP 4
sameh	lda prev
	and #JScrF_VVis
	beq samev
	pei (VBar+2)
	pei (VBar)
	lda NFlags
	and #JScrF_VVis
	beq nov
	jsr @_JWShow
	bra donv
nov	jsr @_JWHide
donv	!POP 4
samev	ldy #JScr_Corner
	lda [Self],y
	sta VBar
	iny
	iny
	lda [Self],y
	sta VBar+2
	pei (VBar+2)
	pei (VBar)
	ldy #JW_HideCnt
	lda [VBar],y
	cmp [Self],y
	bne ishid
	jsr @_JWHide
	bra nohid
ishid	lda NFlags
	cmp #JScrF_HVis|JScrF_VVis
	bne nohid
	jsr @_JWShow
nohid	!POP 4
	ldy #JScr_SFlags
	lda [Self],y
	and #$ffff-JScrF_HVis|JScrF_VVis
	ora NFlags
	sta [Self],y
	pei (Self+2)
	pei (Self)
	jsr @_JScrLayout
	!POP 4
	ldx #1
exeet	!POST LZ
	rtl

	.)
	
&_JScrLayout
	.(

	.abs 1
VBar	.long 4
HBar	.long 4
XSize	.word 2
YSize	.word 2
Flags	.word 2
LZ	= *-1
	.dsb 5
Self	.long 4

	.text

	!PRO LZ
	ldy #JScr_HBar+2
	lda [Self],y
	sta HBar+2
	dey
	dey
	lda [Self],y
	sta HBar
	ldy #JScr_VBar+2
	lda [Self],y
	sta VBar+2
	dey
	dey
	lda [Self],y
	sta VBar
	ldy #JScr_SFlags
	lda [Self],y
	and #JScrF_HVis|JScrF_VVis
	sta Flags
	ldy #JW_XSize
	lda [Self],y
	sta XSize
	ldy #JW_YSize
	lda [Self],y
	sta YSize
	lda Flags
	!jeq gotvsz
	and #JScrF_HVis
	beq noh
	lda YSize
	sec
	ldy #JW_PrefYS
	sbc [HBar],y
	sta YSize
noh	lda Flags
	and #JScrF_VVis
	beq nov
	lda XSize
	sec
	ldy #JW_PrefXS
	sbc [VBar],y
	sta XSize
	pei (YSize)
	ldy #JW_PrefXS
	lda [VBar],y
	pha
	pea 0
	pei (XSize)
	pei (VBar+2)
	pei (VBar)
	jsr @_JWSetBounds
	!POP 12
nov	lda Flags
	and #JScrF_HVis
	beq noh2
	ldy #JW_PrefYS
	lda [HBar],y
	pha
	pei (XSize)
	pei (YSize)
	pea 0
	pei (HBar+2)
	pei (HBar)
	jsr @_JWSetBounds
	!POP 12
noh2	lda Flags
	cmp #JScrF_HVis|JScrF_VVis
	bne gotvsz
	ldy #JW_PrefYS
	lda [HBar],y
	pha
	ldy #JW_PrefXS
	lda [VBar],y
	pha
	pei (YSize)
	pei (XSize)
	ldy #JScr_Corner+2
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
	jsr @_JWSetBounds
	!POP 12
gotvsz	pei (YSize)
	pei (XSize)
	pea 0
	pea 0
	ldy #JScr_View+2
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
	jsr @_JWSetBounds
	!POP 12
exeet	!POST LZ
	rtl

	.)
	

/*-----------------------------------------------
           Scroll area Widget - Jwin
------------------------------------------------*/

&_JScrInit	.(

	.abs 1
VBarP	.long 4
LZ	= *-1
	.dsb 5
Self	.long 4
View	.long 4
Flags	.word 2

	.text

	!PRO LZ
	!PRPOBJ JScr
	pea JF_Selectable
	pea WEV_Button+WEV_Boundary
	pea 128
	pea 128
	pei (Self+2)
	pei (Self)
	jsr @_JWInit
	!POP 12
	lda #32767
	ldy #JW_MaxXS
	sta [Self],y
	ldy #JW_MaxYS
	sta [Self],y
	lda #0
	ldy #JW_MinXS
	sta [Self],y
	ldy #JW_MinYS
	sta [Self],y
	ldy #JScr_VBar
	lda Flags
	and #JScrF_VNotEnd
	bne noend
	lda #SBAR_GoEnd
noend	jsr makebar
	ldy #JScr_HBar
	lda Flags
	and #JScrF_HNotEnd
	bne noend2
	lda #SBAR_GoEnd
noend2	jsr makebar
	lda Flags
	ora #JScrF_HVis|JScrF_VVis
	ldy #JScr_SFlags
	sta [Self],y
	pea 0
	pea 0
	jsr @_JFilInit
	!POP 4
	stx VBarP
	sty VBarP+2
	tya
	ldy #JScr_Corner+2
	sta [Self],y
	dey
	dey
	txa
	sta [Self],y
	ldy #JScr_View
	lda View
	sta [Self],y
	iny
	iny
	lda View+2
	sta [Self],y
	
	pei (Self+2)
	pei (Self)
	pei (View+2)
	pei (View)
	jsr @_JViewSetScr
	!POP 8
	
	pei (View+2)
	pei (View)
	pei (Self+2)
	pei (Self)
	jsr @_JCntAdd
	pei (VBarP+2)
	pei (VBarP)
	pei (Self+2)
	pei (Self)
	jsr @_JCntAdd
	!POP 16
		
exeet	ldx Self
	ldy Self+2
	!POST LZ
	rtl

makebar	phy
	cpy #JScr_VBar
	beq isvb
	ora #SBAR_Horiz
isvb	pha
	pea 0
	pea 0
	jsr @_JBarInit
	!POP 6
	stx VBarP
	sty VBarP+2
	tya
	ply
	iny
	iny
	sta [Self],y
	txa
	dey
	dey
	sta [Self],y
		
	; norty!
	pei (Self+2)
	pei (Self)
	pei (VBarP+2)
	pei (VBarP)
	jsr @_JWSetData
	pei (Self+2)
	pei (Self)
	jsr @_JCntAdd
	!POP 12
	
	ldy #JBar_Changed
	lda #!_JScrMove
	sta [VBarP],y
	iny
	iny
	lda #^_JScrMove
	sta [VBarP],y
	rts

	.)

_JScrMove .(

	.abs 1
VBar	= *
HBar	.long 4
LZ	= *-1
	.dsb 5
Self	.long 4
Type	.word 2

	.text
	!PRO LZ
	pei (Self+2)
	pei (Self)
	jsr @_JWGetData
	pla
	pla
	stx Self
	sty Self+2
	ldy #JScr_VBar
	lda [Self],y
	sta VBar
	iny
	iny
	lda [Self],y
	sta VBar+2
	ldy #JBar_Value+2
	lda [VBar],y
	pha
	dey
	dey
	lda [VBar],y
	pha
	ldy #JScr_HBar
	lda [Self],y
	sta HBar
	iny
	iny
	lda [Self],y
	sta HBar+2
	ldy #JBar_Value+2
	lda [HBar],y
	pha
	dey
	dey
	lda [HBar],y
	pha
	ldy #JScr_View+2
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
;	!POUT "Scrolled %lx %ld %ld\n"
	ldx #MJView_Scrolled
	jsr @VMC
	!POST LZ+12
	rtl
	
	.)

	

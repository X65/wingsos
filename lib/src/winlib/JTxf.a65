&_JTxfKeyD	.(
	
	.abs 1
StrP	.long 4
Pos	.word 2
LSz	.word 2
Up	.word 2
Up2	.word 2
LZ	= *-1
	.dsb 5

Self	.long 4
Key	.word 2

	.text
	!PRO LZ
	ldy #JTxf_String
	lda [Self],y
	sta StrP
	iny
	iny
	lda [Self],y
	sta StrP+2
	
	ldy #JTxf_XCur
	lda [Self],y
	sta Pos
	
	ldy #JTxf_Size
	lda [Self],y
	sta LSz
	inc
	pha
	pei (Self+2)
	pei (Self)
	jsr _JTxfMakeMin
	pla
	pla
	pla
	
	lda Key
	cmp #BS
	bne notbs
isbs	lda Pos
	beq anoup
	dec Pos
	cmp LSz
	bne noteol
	dec LSz
	ldy LSz
	!AS
	lda #0
	sta [StrP],y
	!AL
	bra doup
noteol	lda Pos
	sta Up2
	inc
	sta Up
	jsr delStr	
	dec LSz
	bra doup
anoup	brl noupdate
	
notbs	cmp #CR
	bne notret
	
	pei (Self+2)
	pei (Self)
	ldy #JTxf_Entered
	lda [Self],y
	tax
	iny
	iny
	lda [Self],y
	jsr @cb
	pla
	pla
gonoup	brl noupdate
	
notret	cmp #CURL
	bne notcl
	lda Pos
	beq gonoup
	dec Pos
	bra doup
	
notcl	cmp #CURR
	bne notcr
	lda Pos
	cmp LSz
	beq gonoup
	inc Pos
	bra doup
	
notcr	ldx Pos
	cpx LSz
	beq atend
	pha
	lda LSz
	sta Up
	inc
	sta Up2
	jsr insStr
	pla
	!AS
atend	ldy Pos
	sta [StrP],y
	!AL
	inc Pos
	inc LSz

doup	lda Pos
	ldy #JTxf_XCur
	sta [Self],y
	
	lda LSz
	ldy #JTxf_Size
	sta [Self],y
	
	pei (Self+2)
	pei (Self)
	jsr _JTxfCalc
	jsr @_JWReDraw
	pla
	pla
	
noupdate	
	!POST LZ
	rtl
	
insStr	!AS
	ldy Up
	lda [StrP],y
	ldy Up2
	sta [StrP],y
	!AL
	dec Up
	dec Up2
	lda Up2
	cmp Pos
	beq nome
	bcs insStr
nome	rts

delStr	!AS
	ldy Up
	lda [StrP],y
	ldy Up2
	sta [StrP],y
	!AL
	inc Up
	inc Up2
	lda Up2
	cmp LSz
	bcc delStr
	rts

	.)


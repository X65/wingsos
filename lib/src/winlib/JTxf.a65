&_JTxfInit	.(

	.abs 1
LZ	= *-1
	.dsb 5

Self	.long 4

	.text
	!PRO LZ
	!PRPOBJ JTxf
	pea JF_Selectable
	pea WEV_Button+WEV_Boundary
	pea 8
	pea 80
	pei (Self+2)
	pei (Self)
	jsr @_JWInit
	!POP 12
	lda #4
	ldy #JTxf_OffsX
	sta [Self],y
	pea 8
	pea 32767
	pei (Self+2)
	pei (Self)
	jsr @_JWSetMax
	!POP 8
	pea ^blank
	pea !blank
	pei (Self+2)
	pei (Self)
	jsr @_JTxfSetText
	!POP 8
exeet	ldx Self
	ldy Self+2
	!POST LZ
	rtl
blank	.byte 0
	.)

_JTxfCalc	.(

	.abs 1
XUpto	.word 2
ChrUp	.word 2
Upto	.long 4
LZ	= *-1
	.dsb 4

Self	.long 4

	.text

	!PRO LZ
	stz XUpto
	stz ChrUp
	ldy #JW_FStyle
	lda [Self],y
	pha
	ldy #JW_Font
	lda [Self],y
	pha
	jsr @_FL_prepSize
	pla
	pla
	ldy #JTxf_String
	lda [Self],y
	sta Upto
	iny
	iny
	lda [Self],y
	sta Upto+2
	
more	lda ChrUp
	ldy #JTxf_XCur
	cmp [Self],y
	bcs fine
	lda [Upto]
	and #$ff
	!INP Upto
	tay
	jsr @FL_getXSize
	clc
	adc XUpto
	sta XUpto
	inc ChrUp
	bra more
	
fine	lda XUpto
	ldy #JTxf_CursX
	sta [Self],y
	clc
	ldy #JTxf_OffsX
	adc [Self],y
	sta ChrUp
	bmi islow
	cmp #4
	bcs isvis
islow	lda #4
	bra poscurs
isvis	ldy #JW_XSize
	lda [Self],y
	sec
	sbc ChrUp
	bcc scrit
	cmp #4
	bcs exeet
scrit	ldy #JW_XSize
	lda [Self],y
	sec
	sbc #4
poscurs	sec
	sbc XUpto
	ldy #JTxf_OffsX
	sta [Self],y
exeet	!POST LZ
	rts

	.)
	


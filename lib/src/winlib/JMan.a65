	pla
	
	ldy #JMan_Label+2
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
	
	pea 0
	pea 0
	jsr @_FL_extYab
	pla
	pla
	inx
	inx
	phx
	pea 9
	jsr @_GfxSetPen
	pla
	pla
	jsr @_GfxText
	!POST LZ+4
	rtl
	
	
WndStr	.byte GFX_Charset,"%D%b",1
	.byte CHAR_Col,"%b"
	.byte 1,CHAR_Rep,"%b",0, CHAR_Col,"%b", CHAR_Rep,"%b",2
	.byte CHAR_End
	.byte "%E"
	
WndStr2	.byte GFX_Charset,"%D%b%b"
	.byte CHAR_Col,"%b"
	.byte CHAR_YRep,"%b"
	.byte 4,CHAR_Skip,"%b",5
	.byte CHAR_YEnd
	.byte 6,CHAR_Rep,"%b",7,"%b"

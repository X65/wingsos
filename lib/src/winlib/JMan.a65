&_JManDraw	.(

	.abs 1
X8	.word 2
X82	.word 2
LZ	= *-1
	.dsb 5

Self	.long 4

	.text
	!PRO LZ	
	pea 0
	pea 0
	ldy #JMan_Label+2
	lda [Self],y
	pha
	dey
	dey
	lda [Self],y
	pha
	jsr @_FL_extStrX
	!POP 8
	txa
	lsr
	lsr
	lsr
	inc
	sta X82
	
	ldy #JW_XSize
	lda [Self],y
	lsr
	lsr
	lsr
	sta X8
	dec
	dec
	sec
	sbc X82
	pha
	ldy #JW_Flags
	lda [Self],y
	and #JF_Focused
	tax
	bne isfoc
	pea $fb
	bra gotc
isfoc	pea $e6
gotc	pei (X82)
	txa
	bne isfoc2
	pea $fb
	bra gotc2
isfoc2	pea $16
gotc2	pei (X8)
	pea ^WndChars
	pea !WndChars
	pea ^WndStr
	pea !WndStr
	jsr @_GfxString
	!POP 18

	pea 8
	pea 0
	jsr @_GfxSetPen
	pla
	pla
	
	ldx #8
	ldy #JMan_Flags
	lda [Self],y
	and #REGPF_Resizable
	beq norsz
	ldy #JMan_Flags2
	lda [Self],y
	and #JManF_Maximised
	bne norsz
	inx
norsz	phx
	lda X8
	dec
	dec
	pha
	lda X8
	dec
	dec
	pha
	ldy #JW_YSize
	lda [Self],y
	lsr
	lsr
	lsr
	dec
	dec
	pha
	pea $bf
	lda 3,s	; y-2
	inc
	pha
	pei (X8)
	pea ^WndChars
	pea !WndChars
	pea ^WndStr2
	pea !WndStr2
	jsr @_GfxString
	tsc
	clc
	adc #22
	tcs
	
/*	ldy #JW_Flags
	lda [Self],y
